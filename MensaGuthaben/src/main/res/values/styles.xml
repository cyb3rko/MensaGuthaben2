<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Application theme. -->
    <style name="AppBaseTheme" parent="Theme.Material3.DayNight.NoActionBar">
		<!-- Main theme colors -->
		<!--   your app branding color for the app bar -->
		<item name="colorPrimary">#007CB3</item>
		<!--   darker variant for the status bar and contextual app bars -->
		<item name="colorPrimaryDark">#007CB3</item>
		<!--   theme UI controls like checkboxes and text fields -->
		<item name="colorAccent">#00B0FF</item>
    </style>

	<!-- Application theme. -->
	<style name="AppBaseTheme.Dialog" parent="Theme.Material3.DayNight.Dialog">
		<item name="windowNoTitle">true</item>
		<!-- Main theme colors -->
		<item name="colorPrimary">#007CB3</item>
		<item name="colorPrimaryDark">#007CB3</item>
		<item name="colorAccent">#00B0FF</item>
	</style>

	<style name="ToolbarTheme" parent="ThemeOverlay.Material3" >
		<item name="android:textColorSecondary">@android:color/white</item>
		<item name="colorControlNormal">#FFFFFF</item>
		<item name="titleTextColor">#FFFFFF</item>
	</style>

	<style name="AppTheme.Dialog" parent="AppBaseTheme.Dialog">

	</style>

	<style name="AppTheme" parent="AppBaseTheme">

	</style>

</resources>